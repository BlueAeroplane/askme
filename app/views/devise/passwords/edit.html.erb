
<div class="container main-content create-account">
  <div class="row">
    <div class="col-md-12">
      <h3 class="title">Change your password</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <%= flash_messages %>
          <%= f.password_field :password, :label => 'New password' %>
          <%= f.password_field :password_confirmation, :label => 'Confirm new password' %>
          <%= f.submit 'Change my password', :class => 'btn btn-default' %>
      <% end %>
    </div>
    <div class="col-md-6 social-media-registration">
    </div>
  </div>
</div>
