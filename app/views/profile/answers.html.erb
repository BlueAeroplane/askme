<div class="container main-content profile">
  <%= render 'shared/profile' %>

  <div class="row answers">
    <div class="col-md-12">
      <h4><strong>answers</strong></h4>
      <ul class="list-unstyled">
        <% @answers.each do |answer| %>
        <li>
          <a rel="nofollow" data-method="delete" href="<%= url_for account_delete_answer_path(answer.id) %>">
            <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </a>
          <p>
            <strong><%= answer.question %></strong>
            <%= format_question_sender_link answer %>
          </p>
          <p><%= answer.reply %></p>
          <p>
            <% if answer.image and answer.image.url %>
                <a href="<%= answer.image.url %>" target="_blank">
                    <%= image_tag answer.image.thumb.url %>
                </a>
            <% end %>
          </p>
          <div class="meta clearfix">
            <span class="text-muted"><%= time_ago_in_words answer.replied_at %> ago</span>
            <% if answer.cached_votes_up > 0 %>
            <span class="text-muted pull-right">
              <a href="#"><%= pluralize(answer.cached_votes_up, 'person', 'persons') %></a> likes this
            </span>
            <% end %>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>