
<% if user_signed_in? and  current_user.id !=answer.receiver.id %>
    <button answer-id="<%= answer.id %>" type="button" class="glyphicon glyphicon-heart btn-like pull-right <%= current_user.voted_for?(answer) ? 'liked' : '' %>">
    </button>
<% end %>

<span class="text-muted pull-right who-likes-<%= answer.id %>">
  <% if answer.cached_votes_up > 0 %>
    <%= pluralize(answer.cached_votes_up, 'person likes', 'persons like') %> this
  <% end %>
</span>
